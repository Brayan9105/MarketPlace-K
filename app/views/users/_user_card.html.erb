<% obj.each do |user| %>
  <div class="card mr-3 mb-3" style="min-width: 10rem;">
    <div class="container-fluid soft-purple">
      <div class="container justify-content-center">
        <%= link_to (user.first_name ? user.first_name : user.email), user_path(user), class: "text-light" %>
      </div>
    </div>
    <div class="card-body justify-content-center">
      <p class="card-title"><%= pluralize(user.products.published.count, "product") %> published</p>
      <p class="card-text">
        <%= link_to "view profile", user_path(user), class: "btn btn-primary text-light" %>
      </p>
    </div>
  </div>
<% end %>
