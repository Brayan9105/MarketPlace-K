<div class="container-fluid soft-purple py-5">
  <div class="container justify-content-center">
    <h1 class="text-light">Users</h1>
  </div>
</div>

<div class="container py-3">
  <div class="row">
    <div class="card max-width pb-3 px-3 d-flex">
      <div class="d-flex justify-content-end pt-3">
        <b class="mx-2">
          <%= pluralize(@users.count, "User") %>
        </b>
        <% unless current_user %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success text-light ml-3" %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-primary text-light mx-2" %>
        <% end %>
      </div>
      <hr>
      <div class="d-flex flex-wrap">
        <%= render 'user_card', obj: @users %>
      </div>
    </div>
  </div>
</div>
