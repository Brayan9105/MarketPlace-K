<% obj.each do |category| %>
  <div class="card mr-3 mb-3" style="min-width: 10rem;">
    <div class="container-fluid soft-purple">
      <div class="container justify-content-center">
        <%= link_to category.name, category_path(category), class: "text-light" %>
      </div>
    </div>
    <div class="card-body justify-content-center">
      <p class="card-title"><%= pluralize(category.products.published.count, "product") %> published</p>
      <p class="card-text">
        <%= link_to "view category", category_path(category), class: "btn btn-primary text-light" %>
      </p>
    </div>
  </div>
<% end %>
